<div class="pets-container">
  <% if @pets.any? %>
    <h3>Your Pets!</h3>
    <%= render @pets %>
  <% else %>
    <div class="no-pets">
      <p>You haven't added a pet yet!</p>
    </div>
  <% end %>

  <div class="add-pet">
    <%= link_to new_pet_path do %>
      <span class="fa fa-plus" aria-hidden="true"></span>
      <p>Add a pet</p>
    <% end %>
  </div>
</div>
